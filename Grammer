program -> int_mukiyam() { statement_list }

statement_list -> statement statement_list | ε

statement -> variable_declaration | if_statement | for_loop | while_loop | do_while_loop | print_statement | scan_statement | assignment_statement | function_declaration

variable_declaration -> moolyam variable_name = expression ;

if_statement -> haa ( expression ) { statement_list } else_block

else_block -> uhh { statement_list } | ε

for_loop -> haan ( initialization ; condition ; update ) { statement_list }

while_loop -> Mm ( condition ) { statement_list }

do_while_loop -> ye Mm { statement_list } while ( condition ) ;

print_statement -> Paaru ( expression_list ) ;

scan_statement -> sollu variable_name ;

assignment_statement -> variable_name = expression ;

function_declaration -> int_mukiyam() { statement_list }

expression_list -> expression , expression_list | expression

expression -> term | expression + term | expression - term

term -> factor | term * factor | term / factor

factor -> ( expression ) | variable_name | literal_value

initialization -> variable_declaration | ε

condition -> expression | ε

update -> assignment_statement | ε

variable_name -> [a-zA-Z_][a-zA-Z0-9_]*

literal_value -> integer_literal | float_literal | character_literal | boolean_literal | string_literal

integer_literal -> [0-9]+

float_literal -> [0-9]+\.[0-9]+

character_literal -> '[a-zA-Z0-9_]'

boolean_literal -> pali

string_literal -> ".*"
